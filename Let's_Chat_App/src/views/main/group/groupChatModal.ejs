<div class="modal fade" id="groupChatModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Trò chuyện nhóm</h4>
            </div>
            <div class="modal-body">
                <div>
                    <a
                        href="#groupChatInfoModal"
                        class="create-group-chat"
                        data-toggle="modal"
                    >
                    Xem thông tin nhóm
                    </a>
                </div>
                <div class="listAddUserToGroup"></div>
                <div id="find-user-contact" class="tab-pane fade in active">
                    <div class="find-user-top">
                        <div class="input-group col-md-12">
                            <input id="input-find-users-in-contact" type="text" class="form-control" placeholder="Nhập E-mail hoặc username..." />
                            <span class="input-group-btn">
                                <button id="btn-find-users-in-contact" class="btn btn-lg" type="button">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 6px;">
                    <a data-toggle="tab" id="link-contacts" href="#contacts">
                        Tất cả bạn bè 
                        <% if(countAllContacts > 0){ %>
                            (<%= countAllContacts %>) 
                        <%}else{ %>
                            <span class="show-number-contacts count-contacts display-none">
                                </span>
                            
                        <%} %>
                    </a>
                </div>
                <div class="find-user-bottom">
                    <ul class="contactList" id="group-contact-list">
                        <% contacts.forEach(function(user) {  %> 
                            <li class="_contactList" data-uid="<%= user._id %>">
                                <div class="contactPanel">
                                    <div class="user-avatar">
                                        <img src="../../images/users/<%= user.avatar %>" alt="">
                                    </div>
                                    <div class="user-name" >
                                        <p id="<%= user._id %>">
                                            <%= user.username %>
                                        </p>
                                    </div>
                                    <br>
                                    <div class="user-address">
                                        <span>&nbsp <%= user.address %></span>
                                    </div>
                                    <div class="group-talk" id="btnadd<%= user._id %>"  onclick="addUser(`<%= user._id %>`)" data-uid="<%= user._id %>">
                                        Thêm vào nhóm
                                    </div>
                                    <div style="display:none;" class="group-talk" id="btndrop<%= user._id %>" onclick="dropUser(`<%= user._id %>`)" data-uid="<%= user._id %>">
                                        Bỏ thêm
                                    </div>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                    <hr>
                        <div class="read-more-contacts">
                            <a href="#" id="read-more-contacts">
                                    <strong>Xem thêm 10 bạn bè</strong>
                            </a>
                        </div>
                    <hr>
                </div>
                <div class="group-btn-info">
                    <input type="button" id="input-btn-add-group" class="btn btn-primary custom-background-btn-primary" name="submit" value="Tạo nhóm">
                </div>
            </div>
        </div>
    </div>
</div>